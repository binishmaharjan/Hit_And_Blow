<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.binish.legenddark.hit_and_blow" >

    <!-- Mandatory permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Highly recommended permission to get more ads and revenue -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name="com.binish.legenddark.hit_and_blow.MainActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.binish.legenddark.hit_and_blow.GamePlay"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.binish.legenddark.hit_and_blow.help"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name="com.binish.legenddark.hit_and_blow.Start_Menu"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name="com.purplebrain.adbuddiz.sdk.AdBuddizActivity"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>
